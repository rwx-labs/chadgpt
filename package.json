{
  "name": "chadgpt",
  "version": "0.1.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "check-format": "prettier . --check --cache",
    "format": "prettier . --write --cache",
    "lint": "eslint . --cache --max-warnings=0",
    "start": "bun run bin/chadgpt.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test-coverage": "jest --coverage",
    "prepare": "husky install"
  },
  "author": "Mikkel Kroman <mk@maero.dk>",
  "bin": [
    "bin/chadgpt.js"
  ],
  "license": "Apache-2.0",
  "files": [
    "bin/**/*.js",
    "lib/**/*.js",
    "!**/__tests__/**"
  ],
  "dependencies": {
    "chalk": "^5.4.1",
    "commander": "^10.0.1",
    "irc-framework": "^4.14.0",
    "lodash": "^4.17.21",
    "marked": "^4.3.0",
    "mustache": "^4.2.0",
    "openai": "^4.83.0",
    "wildcard": "^2.0.1",
    "winston": "^3.17.0",
    "yaml": "^2.7.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "eslint": "^9.20.0",
    "globals": "^15.14.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "prettier": "2.8.3"
  },
  "jest": {
    "clearMocks": true,
    "collectCoverage": false,
    "collectCoverageFrom": [
      "lib/**/*.js",
      "!lib/**/{__tests__,testUtils}/**/*.js"
    ],
    "coverageDirectory": "./.coverage/",
    "coverageReporters": [
      "lcov",
      "text-summary"
    ]
  }
}
