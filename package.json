{
  "name": "chadgpt",
  "version": "0.1.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "check-format": "prettier . --check --cache",
    "format": "prettier . --write --cache",
    "lint": "eslint . --cache --max-warnings=0 --ext .js,.mjs",
    "start": "node bin/chadgpt.js",
    "test": "jest",
    "test-coverage": "jest --coverage",
    "prepare": "husky install"
  },
  "author": "Mikkel Kroman <mk@maero.dk>",
  "bin": [
    "bin/chadgpt.js"
  ],
  "license": "Apache-2.0",
  "files": [
    "bin/**/*.js",
    "lib/**/*.js",
    "!**/__tests__/**"
  ],
  "dependencies": {
    "chalk": "^5.2.0",
    "commander": "^10.0.0",
    "irc-framework": "^4.13.1",
    "lodash": "^4.17.21",
    "marked": "^4.2.12",
    "mustache": "^4.2.0",
    "openai": "^3.2.1",
    "winston": "^3.8.2",
    "yaml": "^2.2.1"
  },
  "devDependencies": {
    "eslint": "^8.36.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "prettier": "2.8.3"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "jest": true
    },
    "extends": "eslint:recommended",
    "overrides": [],
    "parserOptions": {
      "ecmaVersion": "latest"
    },
    "rules": {
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ]
    }
  },
  "jest": {
    "clearMocks": true,
    "collectCoverage": false,
    "collectCoverageFrom": [
      "lib/**/*.js",
      "!lib/**/{__tests__,testUtils}/**/*.js"
    ],
    "coverageDirectory": "./.coverage/",
    "coverageReporters": [
      "lcov",
      "text-summary"
    ]
  }
}
